<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MLoops.ViewModels"
        xmlns:v="using:MLoops.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1240" d:DesignHeight="860"
        x:Class="MLoops.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="MLoops"
        Width="1240" Height="860"
        MinWidth="980" MinHeight="680"
        Background="#0D1117"
        DragDrop.AllowDrop="True"
        FontFamily="Segoe UI Variable, Segoe UI, sans-serif">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <SolidColorBrush x:Key="WindowBgBrush" Color="#0D1117"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#131A24"/>
        <SolidColorBrush x:Key="PanelAltBrush" Color="#0F151D"/>
        <SolidColorBrush x:Key="CardBrush" Color="#1A2330"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#2E7EEA"/>
        <SolidColorBrush x:Key="AccentSoftBrush" Color="#1F2E7EEA"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E8EEF6"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#9CAEC3"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#22FFFFFF"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#C8515F"/>

        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#233347" Offset="0"/>
            <GradientStop Color="#1A2432" Offset="1"/>
        </LinearGradientBrush>

    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Padding" Value="14,9"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#3A8DF8"/>
        </Style>

        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#236CCF"/>
        </Style>
    </Window.Styles>

    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Top"
                    Margin="10,8,10,6"
                    Padding="10,8"
                    Height="124"
                    CornerRadius="14"
                    BorderBrush="{StaticResource DividerBrush}"
                    BorderThickness="1"
                    Background="{StaticResource HeaderGradient}">
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto" RowSpacing="4">
                    <Image Grid.Row="0" Grid.Column="0"
                           Source="/mloops.png"
                           Height="108"
                           Stretch="Uniform"
                           HorizontalAlignment="Left"/>

                    <StackPanel Grid.Row="0" Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="10"
                                VerticalAlignment="Center">
                        <Button Content="Open File"
                                Command="{Binding OpenFileCommand}"/>
                        <TextBlock Text="{Binding FfmpegStatusText}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   MaxWidth="320"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border DockPanel.Dock="Bottom"
                    Margin="16,0,16,14"
                    Padding="12,8"
                    CornerRadius="10"
                    BorderBrush="{StaticResource DividerBrush}"
                    BorderThickness="1"
                    Background="{StaticResource PanelAltBrush}">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"/>
            </Border>

            <Grid Margin="16,0,16,0">
                <Grid IsVisible="{Binding !IsFileLoaded}">
                    <Border Name="DropZone"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="720"
                            MaxWidth="720"
                            Padding="30"
                            CornerRadius="18"
                            BorderBrush="{StaticResource DividerBrush}"
                            BorderThickness="1"
                            Background="{StaticResource PanelBrush}">
                        <StackPanel Spacing="10" HorizontalAlignment="Center">
                            <TextBlock Text="Drop Audio File"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="WAV, FLAC, OGG"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Inspect embedded loops, preview playback routing, and export clean conversions"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <Button Content="Browse Files"
                                    Command="{Binding OpenFileCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="22,11"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid IsVisible="{Binding IsFileLoaded}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="390" MinWidth="310"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="{StaticResource PanelBrush}"
                            CornerRadius="14"
                            BorderBrush="{StaticResource DividerBrush}"
                            BorderThickness="1"
                            Padding="12"
                            ClipToBounds="True">
                        <v:MetadataPanel DataContext="{Binding Metadata}"/>
                    </Border>

                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" Background="Transparent"/>

                    <Grid Grid.Column="2" RowDefinitions="Auto,*,Auto" RowSpacing="10">
                        <Border Grid.Row="0"
                                Background="{StaticResource PanelBrush}"
                                CornerRadius="14"
                                BorderBrush="{StaticResource DividerBrush}"
                                BorderThickness="1"
                                Padding="16"
                                DataContext="{Binding Export}"
                                IsVisible="{Binding CanExport}">
                            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto" ColumnSpacing="8" RowDefinitions="Auto,38,10">
                                <TextBlock Grid.Column="0" Grid.Row="0"
                                           Text="Export"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontSize="17"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="1" Grid.Row="0"
                                        Content="FLAC"
                                        Command="{Binding ExportToFlacCommand}"
                                        IsVisible="{Binding CanExportToFlac}"
                                        IsEnabled="{Binding !IsExporting}"/>

                                <Button Grid.Column="2" Grid.Row="0"
                                        Content="Opus"
                                        Command="{Binding ExportToOpusCommand}"
                                        IsVisible="{Binding CanExportToOpus}"
                                        IsEnabled="{Binding !IsExporting}"/>

                                <Button Grid.Column="3" Grid.Row="0"
                                        Content="Opus Max"
                                        Command="{Binding ExportToOpusMaxCommand}"
                                        IsVisible="{Binding CanExportToOpus}"
                                        IsEnabled="{Binding !IsExporting}"/>

                                <Button Grid.Column="4" Grid.Row="0"
                                        Content="Cancel"
                                        Command="{Binding CancelExportCommand}"
                                        Background="{StaticResource DangerBrush}"
                                        IsVisible="{Binding IsExporting}"/>

                                <Border Grid.ColumnSpan="5" Grid.Row="1"
                                        Margin="0,12,0,0"
                                        Padding="10,8"
                                        Background="{StaticResource AccentSoftBrush}"
                                        CornerRadius="8">
                                    <TextBlock Text="Loop points and metadata tags are preserved in exported files"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="12"/>
                                </Border>

                                <ProgressBar Grid.ColumnSpan="5" Grid.Row="2"
                                             Margin="0,10,0,0"
                                             Height="6"
                                             CornerRadius="3"
                                             Value="{Binding Progress}"
                                             Maximum="100"
                                             IsVisible="{Binding IsExporting}"
                                             Foreground="{StaticResource AccentBrush}"
                                             Background="#304050"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1"
                                Background="{StaticResource PanelBrush}"
                                CornerRadius="14"
                                BorderBrush="{StaticResource DividerBrush}"
                                BorderThickness="1"
                                Padding="16"
                                DataContext="{Binding Waveform}"
                                IsVisible="{Binding HasWaveform}">
                            <Grid RowDefinitions="Auto,*,Auto,Auto" RowSpacing="10">
                                <TextBlock Grid.Row="0"
                                           Text="Audio Preview"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontSize="17"
                                           FontWeight="SemiBold"/>

                                <Border Grid.Row="1" MinHeight="170" CornerRadius="10" ClipToBounds="True">
                                    <v:WaveformControl Name="WaveformDisplay"
                                                       MinPeaks="{Binding MinPeaks}"
                                                       MaxPeaks="{Binding MaxPeaks}"
                                                       PlayheadPosition="{Binding PlayheadPosition}"
                                                       LoopMarkers="{Binding LoopMarkers}"
                                                       Cursor="Cross"/>
                                </Border>

                                <Grid Grid.Row="2" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,*" ColumnSpacing="8">
                                    <Button Grid.Column="0" Content="Play" Command="{Binding PlayCommand}" IsEnabled="{Binding !IsPlaying}"/>
                                    <Button Grid.Column="1" Content="Pause" Command="{Binding PauseCommand}" IsEnabled="{Binding IsPlaying}"/>
                                    <Button Grid.Column="2" Content="Stop" Command="{Binding StopCommand}"/>

                                    <CheckBox Grid.Column="3"
                                              Content="Loop"
                                              IsChecked="{Binding IsLoopEnabled}"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              VerticalAlignment="Center"
                                              Margin="8,0,0,0"/>

                                    <StackPanel Grid.Column="4"
                                                Orientation="Horizontal"
                                                Spacing="8"
                                                VerticalAlignment="Center"
                                                IsVisible="{Binding HasFourChannels}">
                                        <TextBlock Text="CH1/2 ←→ CH3/4"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"/>
                                        <Slider Value="{Binding CrossfadeValue}"
                                                 Minimum="0"
                                                 Maximum="1"
                                                 Width="160"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="5"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontFamily="Consolas,Courier New,monospace"
                                               FontWeight="SemiBold">
                                        <Run Text="{Binding CurrentTimeDisplay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding TotalTimeDisplay}"/>
                                    </TextBlock>
                                </Grid>

                                <Border Grid.Row="3"
                                        IsVisible="{Binding HasLoopMarkers}"
                                        Background="{StaticResource CardBrush}"
                                        CornerRadius="10"
                                        Padding="10"
                                        BorderBrush="{StaticResource DividerBrush}"
                                        BorderThickness="1">
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="Detected Loop Regions"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <ItemsControl ItemsSource="{Binding LoopMarkers}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="vm:LoopMarkerInfo">
                                                    <Border Background="#1B2E7EEA"
                                                            BorderBrush="{StaticResource AccentBrush}"
                                                            BorderThickness="3,0,0,0"
                                                            CornerRadius="6"
                                                            Padding="10,8"
                                                            Margin="0,2">
                                                        <StackPanel Spacing="4">
                                                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold" FontSize="13">
                                                                <Run Text="{Binding LoopLabel}"/>
                                                            </TextBlock>

                                                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}" FontSize="12">
                                                                <Run Text="Type: "/>
                                                                <Run Text="{Binding TypeName}"/>
                                                            </TextBlock>

                                                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}" FontSize="12">
                                                                <Run Text="Start: "/>
                                                                <Run Text="{Binding StartTimeDisplay}"/>
                                                                <Run Text=" ("/>
                                                                <Run Text="{Binding StartSample}"/>
                                                                <Run Text=" samples)"/>
                                                            </TextBlock>

                                                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}" FontSize="12">
                                                                <Run Text="End: "/>
                                                                <Run Text="{Binding EndTimeDisplay}"/>
                                                                <Run Text=" ("/>
                                                                <Run Text="{Binding EndSample}"/>
                                                                <Run Text=" samples)"/>
                                                            </TextBlock>

                                                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}" FontSize="12">
                                                                <Run Text="Duration: "/>
                                                                <Run Text="{Binding DurationTimeDisplay}"/>
                                                            </TextBlock>

                                                            <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                                                <TextBlock Text="Loop Count:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" VerticalAlignment="Center"/>
                                                                <TextBox Width="64"
                                                                         Text="{Binding LoopCountText, Mode=TwoWay}"
                                                                         HorizontalContentAlignment="Center"
                                                                         VerticalContentAlignment="Center"
                                                                         Padding="4,2"
                                                                         FontFamily="Consolas,Courier New,monospace"/>
                                                                <TextBlock Text="{Binding LoopCountHint}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <Border Grid.Row="2"
                                Background="{StaticResource PanelAltBrush}"
                                CornerRadius="10"
                                BorderBrush="{StaticResource DividerBrush}"
                                BorderThickness="1"
                                Padding="10"
                                DataContext="{Binding Export}"
                                IsVisible="{Binding HasConsoleOutput}">
                            <Grid RowDefinitions="Auto,*" RowSpacing="6">
                                <TextBlock Grid.Row="0"
                                           Text="FFmpeg Console"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="12"
                                           FontWeight="SemiBold"/>

                                <TextBox Name="ExportConsoleTextBox"
                                         Grid.Row="1"
                                         Text="{Binding ConsoleOutput}"
                                         IsReadOnly="True"
                                         AcceptsReturn="True"
                                         TextWrapping="NoWrap"
                                         FontSize="11"
                                         MinHeight="82"
                                         MaxHeight="170"
                                         FontFamily="Consolas,Courier New,monospace"
                                         Background="#111923"
                                         Foreground="#C7D3E0"
                                         BorderBrush="#30FFFFFF"
                                         BorderThickness="1"
                                         Padding="8,6"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <Border IsVisible="{Binding IsDragOver}"
                        Background="#882E7EEA"
                        BorderBrush="#AA6EA7F2"
                        BorderThickness="2"
                        CornerRadius="16"
                        IsHitTestVisible="False"/>

                <Border IsVisible="{Binding IsLoading}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#DD121823"
                        CornerRadius="14"
                        Padding="32"
                        BorderBrush="{StaticResource DividerBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                     Width="220"
                                     Height="5"
                                     CornerRadius="3"
                                     Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Preparing file..."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
